{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/public/*": ["./public/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/components/AboutMe/AboutMe.jsx",
        "src/pages/_app.jsx",
        "src/pages/_document.jsx",
        "src/components/commons/Typography.styles.js",
        "src/components/AboutMe/AboutMe.styles.js",
        "src/utils/theme.js"
    ],
    "exclude": ["node_modules"]
}
